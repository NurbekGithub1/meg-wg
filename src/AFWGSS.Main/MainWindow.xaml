<mah:MetroWindow x:Class="AFWGSS.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:prism="http://prismlibrary.com/"
        Title="AFWGSS - Air Force War Game Simulation System" 
        Height="900" Width="1600"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="LightGray">
            <MenuItem Header="_File">
                <MenuItem Header="_New Scenario"/>
                <MenuItem Header="_Open Scenario"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="MenuItem_Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo"/>
                <MenuItem Header="_Redo"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_2D Map"/>
                <MenuItem Header="_3D View"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>

        <ToolBar Grid.Row="1" Height="60" Background="AliceBlue">
            <ToolBar.Resources>
                <Style TargetType="RadioButton">
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="Height" Value="50"/>
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </ToolBar.Resources>
            
            <Label Content="Modules:" VerticalAlignment="Center" FontWeight="Bold"/>
            <Separator/>
            
            <RadioButton Content="POE"   IsChecked="True" Tag="POEMainView" Click="ModuleButton_Click"/>
            <RadioButton Content="DAAOE" Tag="DAAOEView"   Click="ModuleButton_Click"/>
            <RadioButton Content="GP&amp;S" IsEnabled="False"/>
            <RadioButton Content="AAR"   Tag="AARView"     Click="ModuleButton_Click"/>
            <RadioButton Content="WGC"   Tag="WGCView"     Click="ModuleButton_Click"/>
        </ToolBar>

        <ContentControl Grid.Row="2" prism:RegionManager.RegionName="ContentRegion" Margin="5" BorderBrush="Gray" BorderThickness="1"/>

        <StatusBar Grid.Row="3" Background="LightGray">
            <StatusBarItem>
                <TextBlock Text="Status: Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Name="CurrentModuleText" Text="Module: POE"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="Simulation: Stopped"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Time: 00:00:00"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</mah:MetroWindow>