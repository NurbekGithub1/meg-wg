<mah:MetroWindow x:Class="AFWGSS.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="AFWGSS - Air Force War Game Simulation System" 
        Height="900" Width="1600"
        WindowState="Maximized">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <!-- Menu -->
        <Menu Grid.Row="0" Background="LightGray">
            <MenuItem Header="_File">
                <MenuItem Header="_New Scenario"/>
                <MenuItem Header="_Open Scenario"/>
                <Separator/>
                <MenuItem Header="E_xit"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo"/>
                <MenuItem Header="_Redo"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_2D Map"/>
                <MenuItem Header="_3D View"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About"/>
            </MenuItem>
        </Menu>

        <!-- Module Switcher Toolbar -->
        <ToolBar Grid.Row="1" Height="60" Background="AliceBlue">
            <ToolBar.Resources>
                <Style TargetType="RadioButton">
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="Height" Value="50"/>
                    <Setter Property="Margin" Value="5"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </ToolBar.Resources>
            
            <Label Content="Modules:" VerticalAlignment="Center" FontWeight="Bold"/>
            <Separator/>
            <RadioButton Content="POE" IsChecked="True" VerticalContentAlignment="Center"/>
            <RadioButton Content="DAAOE" VerticalContentAlignment="Center"/>
            <RadioButton Content="GP&amp;S" VerticalContentAlignment="Center"/>
            <RadioButton Content="AAR" VerticalContentAlignment="Center"/>
            <RadioButton Content="WGC" VerticalContentAlignment="Center"/>
        </ToolBar>

        <!-- Module Content Area -->
        <Border Grid.Row="2" Background="White" BorderBrush="Gray" BorderThickness="1" Margin="5">
            <Grid>
                <TextBlock Text="Module content will be displayed here" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"
                          FontSize="20"
                          Foreground="Gray"/>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Background="LightGray">
            <StatusBarItem>
                <TextBlock Text="Status: Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="User: Admin"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="Simulation: Stopped"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Time: 00:00:00"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</mah:MetroWindow>